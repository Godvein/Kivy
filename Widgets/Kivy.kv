KivyGridLayout:

<KivyGridLayout>:
    cols: 3
    ToggleButton:
        text: "off"
        on_state: root.togglebutton(self) #pass self for the state of the button
    Button:
        text: "Click"
        on_press: root.onclick()
        disabled: root.button_disabled

    Label:
        text: root.mytext

    Switch:
        on_active: root.switchbehaviour(self)
