KivyGridLayout:

<KivyGridLayout>:
    cols: 3
    ToggleButton:
        text: "off"
        on_state: root.togglebutton(self) #pass self for the state of the button
    Button:
        text: "Click"
        on_press: root.onclick()
        disabled: root.button_disabled

    Label:
        text: root.mytext

    Switch:
        on_active: root.switchbehaviour(self)

    Slider:
        id: slider_id
        min: 0
        max: 100
        on_value: root.sliderbehaviour(self)

    ProgressBar:
        value: slider_id.value

    TextInput:
        size_hint: None, 1
        height: "100dp"
        multiline: False
        on_text_validate: root.textinputbehaviour(self)

    Label:
        text: root.inputtext
    
    Image:
        source: "images/myimage.png"
        #allow_strech: True  
        #keep_ratio: False for allowing image to take up screen space

